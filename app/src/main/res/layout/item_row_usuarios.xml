<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/searchViewUser"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@color/md_disabled_hint_text_white"
            android:backgroundTint="@color/md_black_1000"
            android:iconifiedByDefault="false"
            android:queryHint="Buscar aquí"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <requestFocus />
        </androidx.appcompat.widget.SearchView>

        <Button
            android:id="@+id/buttonAddUser"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="8dp"
            android:background="@color/md_disabled_hint_text_white"
            android:backgroundTint="@color/md_black_1000"
            android:text="Añadir usuario"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/searchViewUser"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="MissingConstraints" />
    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="77dp">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/tablaUsuarios"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="1,2,3,4">

                    <TableRow
                        android:id="@+id/tableRowCabecerasUsuarios"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/table_degradate_shape">

                        <TextView
                            android:id="@+id/nombreusuarioindice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:background="@drawable/cell_shape"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="Nombre"
                            android:textColor="@color/md_text_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/usuarioindice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:background="@drawable/cell_shape"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="Username"
                            android:textColor="@color/md_text_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tipousuarioindice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="3"
                            android:background="@drawable/cell_shape"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="Tipo"
                            android:textColor="@color/md_text_white"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/ultimoaccesousuarioindice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="4"
                            android:background="@drawable/cell_shape"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="Último acceso"
                            android:textColor="@color/md_text_white"
                            android:textStyle="bold" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tableRowDatosUsuarios"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:background="@color/md_text_white">

                        <TextView
                            android:id="@+id/nombreusuariodatos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:background="@drawable/cell_shape"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="name"
                            android:textColor="@color/md_text" />

                        <TextView
                            android:id="@+id/usuariodatos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="2"
                            android:background="@drawable/cell_shape"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="id fiscal"
                            android:textColor="@color/md_text" />

                        <TextView
                            android:id="@+id/tipousuariodatos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="3"
                            android:background="@drawable/cell_shape"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="id fiscal"
                            android:textColor="@color/md_text" />

                        <TextView
                            android:id="@+id/ultimoaccesousuariodatos"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="4"
                            android:background="@drawable/cell_shape"
                            android:gravity="left"
                            android:padding="5dp"
                            android:text="Sin configurar"
                            android:textColor="@color/md_disabled_hint_text"
                            android:textStyle="italic" />
                    </TableRow>
                </TableLayout>
            </HorizontalScrollView>
        </ScrollView>
</LinearLayout>