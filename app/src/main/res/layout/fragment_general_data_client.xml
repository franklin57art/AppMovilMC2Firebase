<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#e7eef1"
    android:orientation="vertical"
    android:padding="8dp"
    tools:context="com.example.appmovilmc2firebase.ui.clientes.GeneralDataClientActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbarAlwaysDrawVerticalTrack="true"
        android:fadeScrollbars="false">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvGeneralDataClienteRazonSocial"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="20dp"
                    android:text="Razón social"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietGeneralDataClienteRazonSocial"
                    android:layout_width="265dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/md_white_1000"
                    android:textColor="@color/md_black_1000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tvGeneralDataClienteRazonSocial"
                    app:layout_constraintTop_toBottomOf="@+id/tvGeneralDataClienteRazonSocial"
                    tools:ignore="MissingConstraints,TextContrastCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/tvGeneralDataClienteIdFiscal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="ID fiscal"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/tietGeneralDataClienteRazonSocial"
                    app:layout_constraintTop_toBottomOf="@+id/tietGeneralDataClienteRazonSocial" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietGeneralDataClienteIdFiscal"
                    android:layout_width="265dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/md_white_1000"
                    android:textColor="@color/md_black_1000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tvGeneralDataClienteIdFiscal"
                    app:layout_constraintTop_toBottomOf="@+id/tvGeneralDataClienteIdFiscal"
                    tools:ignore="MissingConstraints,TextContrastCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/tvGeneralDataClienteNombreCorto"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Nombre corto"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/tietGeneralDataClienteIdFiscal"
                    app:layout_constraintTop_toBottomOf="@+id/tietGeneralDataClienteIdFiscal" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietGeneralDataClienteNombreCorto"
                    android:layout_width="265dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/md_white_1000"
                    android:textColor="@color/md_black_1000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tvGeneralDataClienteNombreCorto"
                    app:layout_constraintTop_toBottomOf="@+id/tvGeneralDataClienteNombreCorto"
                    tools:ignore="MissingConstraints,TextContrastCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/tvGeneralDataClienteNombreDelCliente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Nombre del cliente"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/tietGeneralDataClienteNombreCorto"
                    app:layout_constraintTop_toBottomOf="@+id/tietGeneralDataClienteNombreCorto" />

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietGeneralDataClienteNombreDelCliente"
                    android:layout_width="265dp"
                    android:layout_height="35dp"
                    android:layout_marginTop="8dp"
                    android:background="@color/md_white_1000"
                    android:textColor="@color/md_black_1000"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="@+id/tvGeneralDataClienteNombreDelCliente"
                    app:layout_constraintTop_toBottomOf="@+id/tvGeneralDataClienteNombreDelCliente"
                    tools:ignore="MissingConstraints,TextContrastCheck,TouchTargetSizeCheck" />

                <TextView
                    android:id="@+id/tvGeneralDataClienteTecnicosAsignados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Técnicos asignados"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/tietGeneralDataClienteNombreDelCliente"
                    app:layout_constraintTop_toBottomOf="@+id/tietGeneralDataClienteNombreDelCliente" />

                <AutoCompleteTextView
                    android:id="@+id/actvGeneralDataClienteTecnicosAsignados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:completionHint="Técnico"
                    android:completionThreshold="1"
                    android:hint="Técnico"
                    android:textColor="@color/md_black_1000"
                    app:layout_constraintStart_toStartOf="@+id/tvGeneralDataClienteTecnicosAsignados"
                    app:layout_constraintTop_toBottomOf="@+id/tvGeneralDataClienteTecnicosAsignados" />

                <TextView
                    android:id="@+id/tvGeneralDataClientePuntosDeSuministroAsociados"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="Puntos de suministro asociados al cliente:"
                    android:textColor="@color/md_black_1000"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@id/actvGeneralDataClienteTecnicosAsignados"
                    app:layout_constraintTop_toBottomOf="@+id/actvGeneralDataClienteTecnicosAsignados" />

                <TextView
                    android:id="@+id/tvTableCabeceraGeneralDataClienteNombrePuntosDeSuministro"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Nombre"
                    android:textColor="@color/md_text"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tvGeneralDataClientePuntosDeSuministroAsociados"
                    app:layout_constraintTop_toBottomOf="@+id/tvGeneralDataClientePuntosDeSuministroAsociados" />

                <ListView
                    android:id="@+id/lvTableDatosGeneralDataClienteNombrePuntosDeSuministro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:textColor="@color/md_text"
                    android:divider="@color/md_black_1000"
                    android:background="@color/md_white_1000"
                    app:layout_constraintStart_toStartOf="@+id/tvTableCabeceraGeneralDataClienteNombrePuntosDeSuministro"
                    app:layout_constraintTop_toBottomOf="@+id/tvTableCabeceraGeneralDataClienteNombrePuntosDeSuministro" />

                <Button
                    android:id="@+id/buttonAtrasGeneralDataClient"
                    android:layout_width="95dp"
                    android:layout_height="35dp"
                    android:layout_marginStart="2dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bordes_redondos_azul"
                    android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
                    android:text="VOLVER  "
                    android:textColor="@color/md_text_white"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@+id/tvTableCabeceraGeneralDataClienteNombrePuntosDeSuministro"
                    app:layout_constraintTop_toBottomOf="@+id/lvTableDatosGeneralDataClienteNombrePuntosDeSuministro" />

                <Button
                    android:id="@+id/buttonActualizarGeneralDataCliente"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_marginTop="12dp"
                    android:background="@drawable/bordes_redondos"
                    android:drawableLeft="@drawable/ic_baseline_system_update_alt_24"
                    android:text="ACTUALIZAR  DATOS "
                    android:textColor="@color/md_text_white"
                    android:textSize="12sp"
                    android:textStyle="bold"

                    app:layout_constraintEnd_toStartOf="@+id/buttonGeneralDataClienteEliminarCliente"
                    app:layout_constraintStart_toEndOf="@+id/buttonAtrasGeneralDataClient"
                    app:layout_constraintTop_toBottomOf="@+id/lvTableDatosGeneralDataClienteNombrePuntosDeSuministro" />

                <Button
                    android:id="@+id/buttonGeneralDataClienteEliminarCliente"
                    android:layout_width="110dp"
                    android:layout_height="40dp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="12dp"
                    android:layout_marginEnd="10dp"
                    android:background="@drawable/bordes_redondos_rojo"
                    android:drawableLeft="@drawable/ic_baseline_delete_24"
                    android:text="Eliminar cliente"
                    android:textColor="@color/md_text_white"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lvTableDatosGeneralDataClienteNombrePuntosDeSuministro" />

            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</LinearLayout>