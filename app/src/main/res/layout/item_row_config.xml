<?xml version="1.0" encoding="utf-8"?><!--Layout que hara la fila que mostrará la información de cada usuario.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/item_row_user"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Información de partner"
                android:textColor="@color/md_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/tvRazonSocial"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/md_grey_500"
                android:backgroundTint="@android:color/transparent"
                android:enabled="false"
                android:text="Razón social"
                android:textColor="@color/md_text"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@+id/tvRazonSocial2"
                app:layout_constraintTop_toBottomOf="@+id/tvRazonSocial2" />

            <TextView
                android:id="@+id/tvRazonSocial2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Razón social"
                android:textColor="@color/md_text"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/tvTitle"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle" />

            <EditText
                android:id="@+id/tvNamePartner"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/md_grey_500"
                android:backgroundTint="@android:color/transparent"
                android:enabled="false"
                android:text="Nombre del partner"
                android:textColor="@color/md_text"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@+id/tvNamePartner2"
                app:layout_constraintTop_toBottomOf="@+id/tvNamePartner2" />

            <TextView
                android:id="@+id/tvNamePartner2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Nombre del partner"
                android:textColor="@color/md_text"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/tvRazonSocial"
                app:layout_constraintTop_toBottomOf="@+id/tvRazonSocial" />

            <TextView
                android:id="@+id/tvTitle3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Información de usuario"
                android:textColor="@color/md_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@+id/tvNamePartner"
                app:layout_constraintTop_toBottomOf="@+id/tvNamePartner" />

            <EditText
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/md_grey_500"
                android:backgroundTint="@android:color/transparent"
                android:enabled="false"
                android:text="Name"
                android:textColor="@color/md_text"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@+id/tvName2"
                app:layout_constraintTop_toBottomOf="@+id/tvName2" />

            <TextView
                android:id="@+id/tvName2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Nombre completo"
                android:textColor="@color/md_text"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/tvTitle3"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle3" />

            <EditText
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginStart="55dp"
                android:layout_marginTop="8dp"
                android:background="@color/md_grey_500"
                android:backgroundTint="@android:color/transparent"
                android:enabled="false"
                android:text="Email"
                android:textColor="@color/md_text"
                android:textSize="14dp"
                app:layout_constraintStart_toEndOf="@+id/tvUserName"
                app:layout_constraintTop_toBottomOf="@+id/tvEmail2" />

            <TextView
                android:id="@+id/tvEmail2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Email"
                android:textColor="@color/md_text"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/tvEmail"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <EditText
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/md_grey_500"
                android:backgroundTint="@android:color/transparent"
                android:enabled="false"
                android:text="Nombre usuario"
                android:textColor="@color/md_text"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@+id/tvUserName2"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName2" />

            <TextView
                android:id="@+id/tvUserName2"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_marginTop="12dp"
                android:text="Nombre de usuario"
                android:textColor="@color/md_text"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/tvName"
                app:layout_constraintTop_toBottomOf="@+id/tvName" />

            <EditText
                android:id="@+id/tvTypeUser"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginTop="8dp"
                android:background="@color/md_grey_500"
                android:backgroundTint="@android:color/transparent"
                android:enabled="false"
                android:text="Tipo de usuario"
                android:textColor="@color/md_text"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@+id/tvTypeUser2"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeUser2" />

            <TextView
                android:id="@+id/tvTypeUser2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="Tipo de usuario"
                android:textColor="@color/md_text"
                android:textStyle="italic"
                app:layout_constraintStart_toStartOf="@+id/tvUserName"
                app:layout_constraintTop_toBottomOf="@+id/tvUserName" />

            <TextView
                android:id="@+id/tvTitle2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:text="Cambiar contraseña"
                android:textColor="@color/md_text"
                android:textSize="18sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvTypeUser" />

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:hint="Contraseña actual"
                android:textColorHint="@color/md_text"
                app:layout_constraintTop_toBottomOf="@+id/tvTitle2"
                app:passwordToggleEnabled="true"
                tools:layout_editor_absoluteX="0dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@color/md_text"
                    android:inputType="textPassword"
                    android:text="Contraseña"
                    android:textSize="16dp" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilNewPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:hint="Nueva contraseña"
                android:textColorHint="@color/md_text"
                app:layout_constraintTop_toBottomOf="@+id/tilPasswordLayout"
                app:passwordToggleEnabled="true"
                tools:layout_editor_absoluteX="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietPasswordNew"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@color/md_text"
                    android:inputType="textPassword"
                    android:text="Contraseña"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/tvPasswordNew2"
                    app:layout_constraintTop_toBottomOf="@+id/tvPasswordNew2" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilRepeatPasswordLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="8dp"
                android:hint="Repite contraseña"
                android:textColorHint="@color/md_text"
                app:layout_constraintTop_toBottomOf="@+id/tilNewPasswordLayout"
                app:passwordToggleEnabled="true"
                tools:layout_editor_absoluteX="12dp">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tietRepeatPassword"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="@color/md_text"
                    android:inputType="textPassword"
                    android:text="Repite Contraseña"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="@+id/tvRepeatPassword2"
                    app:layout_constraintTop_toBottomOf="@+id/tvRepeatPassword2" />
            </com.google.android.material.textfield.TextInputLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
