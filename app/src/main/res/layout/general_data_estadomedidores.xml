<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#e7eef1"
        android:orientation="vertical"
        android:padding="8dp"
        tools:context="com.example.appmovilmc2firebase.ui.estadoMedidores.GeneralDataEstadomedidoresFragment">

        <TextView
            android:id="@+id/tvGeneralDataEstadoMedidoresNombreTítulo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:text="Nombre"
            android:textColor="@color/md_black_1000"
            android:textSize="30sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageViewGeneralDataEstadoMedidores"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/lightbulbfontawesome"
            app:layout_constraintStart_toStartOf="@+id/tvGeneralDataEstadoMedidoresNombreTítulo"
            app:layout_constraintTop_toBottomOf="@+id/tvGeneralDataEstadoMedidoresNombreTítulo" />

        <TextView
            android:id="@+id/tvGeneralDataEstadoMedidoresCups"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginTop="18dp"
            android:text="Nombre"
            android:textColor="@color/md_black_1000"
            android:textSize="18sp"
            app:layout_constraintStart_toEndOf="@id/imageViewGeneralDataEstadoMedidores"
            app:layout_constraintTop_toBottomOf="@id/tvGeneralDataEstadoMedidoresNombreTítulo" />

        <Button
            android:id="@+id/buttonGeneralDataEstadoMedidoresEditPuntoMedida"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/bordes_redondos_azul"
            android:drawableLeft="@drawable/ic_baseline_edit_24"
            android:text="Editar punto de medida"
            android:textColor="@color/md_text_white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvGeneralDataEstadoMedidoresCups" />

        <Button
            android:id="@+id/buttonGeneralDataEstadoMedidoresIncidencia"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="20dp"
            android:background="@drawable/bordes_redondos_azul"
            android:drawableLeft="@drawable/ic_baseline_warning_24"
            android:text="Informar de incidencia"
            android:textColor="@color/md_text_white"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/buttonGeneralDataEstadoMedidoresEditPuntoMedida"
            app:layout_constraintTop_toBottomOf="@+id/buttonGeneralDataEstadoMedidoresEditPuntoMedida" />

        <TextView
            android:id="@+id/tvGeneralDataEstadoMedidoresHuecos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Huecos: 0(0Q)"
            android:textColor="@color/md_black_1000"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="@+id/imageViewGeneralDataEstadoMedidores"
            app:layout_constraintTop_toBottomOf="@+id/buttonGeneralDataEstadoMedidoresIncidencia" />


    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>