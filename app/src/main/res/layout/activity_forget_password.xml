<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/md_white_1000"
    android:orientation="horizontal"
    tools:context="com.example.appmovilmc2firebase.ForgetPasswordActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="160dp"
        android:layout_marginRight="35dp"
        android:background="#e7eef1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvRecuperacionContraseña"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="#4f6e7b"
            android:gravity="center"
            android:textColor="@color/md_text_white"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvTextoInfo"
            android:layout_width="278dp"
            android:layout_height="67dp"
            android:layout_marginTop="30dp"
            android:inputType="textMultiLine"
            android:minLines="2"
            android:padding="4dp"
            android:singleLine="false"
            android:text="Introduzca su correo en el siguiente cuadro de texto para obtener su nueva contraseña."
            android:textSize="16dp"
            app:layout_constraintEnd_toEndOf="@+id/tietEmailForgetPassword"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintStart_toStartOf="@+id/tietEmailForgetPassword"
            app:layout_constraintTop_toBottomOf="@+id/tvRecuperacionContraseña" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/tietEmailForgetPassword"
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:layout_marginTop="24dp"
            android:background="@color/md_white_1000"
            android:hint="Email@email.com"
            android:importantForAutofill="no"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/md_disabled_hint_text"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvTextoInfo"
            tools:ignore="MissingConstraints,TextContrastCheck,TouchTargetSizeCheck" />

        <Button
            android:id="@+id/buttonSalirForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="68dp"
            android:background="@drawable/bordes_redondos_rojo"
            android:text="SALIR"
            android:textColor="@color/md_text_white"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tietEmailForgetPassword" />

        <Button
            android:id="@+id/buttonAceptarForgetPassword"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="68dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bordes_redondos"
            android:text="Acceptar"
            android:textColor="@color/md_text_white"
            android:textSize="14dp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tietEmailForgetPassword" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</LinearLayout>