<?xml version="1.0" encoding="utf-8"?><!--Layout que hara la fila que mostrar치 la informaci칩n de cada usuario.-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">


        <Button
            android:id="@+id/buttonAddPuntoDeMedida"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bordes_redondos"
            android:text="A침adir punto de medida"
            android:textColor="@color/md_text_white"
            android:textStyle="bold" />


    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:background="#e7eef1"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/DatosPuntosDeMedida"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">


            <ImageView
                android:id="@+id/ivPuntosDeMedida"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:src="@drawable/lightbulbfontawesome"
                app:tint="@color/md_black_1000" />

            <TextView
                android:id="@+id/nombreindice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:text="Nombre: "
                android:textColor="@color/md_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/nombreindice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="165dp"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:text="Nombre"
                android:textColor="@color/md_text" />

            <TextView
                android:id="@+id/cupsindice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="40dp"
                android:padding="2dp"
                android:text="CUPS: "
                android:textColor="@color/md_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/cupsindice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="40dp"
                android:padding="2dp"
                android:text="cups"
                android:textColor="@color/md_text" />

            <TextView
                android:id="@+id/clienteindice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="70dp"
                android:padding="2dp"
                android:text="Cliente: "
                android:textColor="@color/md_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/clienteindice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="155dp"
                android:layout_marginTop="70dp"
                android:padding="2dp"
                android:text="Cliente"
                android:textColor="@color/md_text" />

            <TextView
                android:id="@+id/monitorizacionindice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="100dp"
                android:layout_marginTop="100dp"
                android:padding="2dp"
                android:text="Monitorizaci칩n: "
                android:textColor="@color/md_text"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/monitorizacionindice2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="205dp"
                android:layout_marginTop="100dp"
                android:padding="2dp"
                android:text="Sin configurar"
                android:textStyle="italic"
                android:textColor="@color/md_disabled_hint_text" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>
